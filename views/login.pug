include header
div(class='container full-width')
    div(class='wrap')
        div(class='content')
            h1 Login
            div(class='wrap')
                div(class='content')
                    form(action="/login", method="POST", id="formLogin")
                        div(class="form-control")
                            label Login:
                            input(
                                type="text"
                                placeholder="Введите логин"
                                name="login"
                            )
                        div(class="form-control")
                            label Password:
                            input(
                                type="password"
                                placeholder="Введите пароль"
                                name="password"                                
                            )
                        button(
                            type="submit"
                        ) Войти
include footer
script(src="https://cdn.jsdelivr.net/npm/sweetalert2@9")
