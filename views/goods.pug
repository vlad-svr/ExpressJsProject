include header.pug

div(class='content')
    header(class='site-header')
        include site_header

    div.container
        div.row
            div.col.col-md-12
                h2.panel-title #{goods[0]['name']}
            div.col.col-md-4
                img(
                    src=`/images/${goods[0]['image']}`
                    class='goods-big-image'
                )
                if images
                    div.row
                        each val, index in images
                            div.col.col-md-6
                                img(
                                    src=`/images/${val['path']}`
                                    class="goods-little-image"
                                )
            div.col.col-md-8
                p #{goods[0]['description']}
                span.success Цена: #{goods[0]['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')+' '+currency}
                button.button-success.add-to-cart(
                    data-goods_id=goods[0]['id']
                ) В корзину
    include nav
include footer